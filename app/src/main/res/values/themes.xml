<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="qmui_skin_support_topbar_separator_color">?attr/theme_separator</item>
        <item name="qmui_skin_support_topbar_bg">?attr/theme_topbar_bg</item>
        <item name="theme_topbar_bg">@color/light</item>
        <item name="theme_separator">@color/light</item>
        <item name="theme_leftback_icon">@drawable/ic_action_back</item>
        <item name="theme_topbar_title_color">@color/black</item>
        <item name="QMUITopBarStyle">@style/QDTopBar</item>

        <item name="qmui_bottom_sheet_list_item_text_style">@style/ListText</item>
        <item name="qmui_bottom_sheet_cancel_style">@style/ListCancelText</item>
        <item name="theme_rootlayout_bg_color">@color/light_white</item>
        <item name="theme_tab_drawable">@drawable/navbar_bg</item>
        <item name="theme_recyclerview_bg_color">@color/white</item>
        <item name="theme_text_color">@color/text_gray</item>
        <item name="theme_pager_bg_color">@color/white</item>
        <item name="theme_headline_bg_color">@color/status_color</item>
        <item name="theme_headline_text_color">@color/white</item>
        <item name="theme_slidebar_bg_color">@color/white</item>
    </style>

    <style name="Launcher" parent="Theme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/hkdict_laucnher</item>
    </style>

    <style name="dark_Theme" parent="QMUI.Compat.NoActionBar">
        <item name="qmui_skin_support_topbar_separator_color">?attr/theme_separator</item>
        <item name="qmui_skin_support_topbar_bg">?attr/theme_topbar_bg</item>
        <item name="theme_topbar_bg">@color/night_bg</item>
        <item name="theme_leftback_icon">@drawable/ic_action_night_back</item>
        <item name="theme_separator">@color/night_bg</item>
        <item name="theme_topbar_title_color">@color/white</item>
        <item name="QMUITopBarStyle">@style/QDTopBar</item>

        <item name="qmui_skin_support_bottom_sheet_bg">@color/night_bg</item>
        <item name="qmui_skin_support_bottom_sheet_list_item_bg">@color/night_bg</item>
        <item name="qmui_skin_support_bottom_sheet_cancel_bg">@color/night_bg</item>
        <item name="qmui_bottom_sheet_list_item_text_style">@style/ListText</item>
        <item name="qmui_bottom_sheet_cancel_style">@style/ListCancelText</item>
        <item name="theme_rootlayout_bg_color">@color/night_bg</item>
        <item name="theme_tab_drawable">@drawable/navbar_bg_night</item>
        <item name="theme_recyclerview_bg_color">@color/night_bg</item>
        <item name="theme_text_color">@color/light_white</item>
        <item name="theme_pager_bg_color">@color/night_bg</item>
        <item name="theme_headline_bg_color">@color/night_bg</item>
        <item name="theme_headline_text_color">@color/white</item>
        <item name="theme_slidebar_bg_color">@color/night_bg</item>
    </style>
</resources>